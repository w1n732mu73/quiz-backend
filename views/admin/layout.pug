doctype html
html
  head
    title quiz-d-astronomie
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="/css/bootstrap.min.css" )

  body
    block navbar
      .d-flex.mb-4
        .me-2
          a(href='/admin') Dashboard
        .me-2
          a(href='/admin/quizes') Quizes
        .me-2
          a(href='/admin/questions') Questions
    block content
  script.
    document.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', (event)=> {
          const method = event?.target?.dataset?.method || null;

          if (method) {
            event.preventDefault();
            fetch(event?.target?.href, { method: method.toUpperCase() }).then(() => window.location.reload())
          }
        })
    })
